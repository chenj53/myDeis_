<%- include('bootheader') -%>
<%- include('menubar') -%>
    <div class="jumbotron">
        <h1>Selling your textbooks here</h1>
    </div>

    <form method="post" action="/forum" >
      <div class="form-group">
        <label for="Input1">Title</label>
        <input type="text" id="title" class="form-control" aria-describedby="Input1HelpBlock">
        <small id="Input1HelpBlock" class="form-text text-muted">
          Name the book you want to sell.
        </small>
      </div>

      <div class="form-group">
            <label for="Input2">Course Name </label>
            <input type="text" id="Course Name" class="form-control" aria-describedby="Input2HelpBlock">
            <small id="Input2HelpBlock" class="form-text text-muted">
              The name of the course which requires this book, adding the professor name and semester details is recommended.
            </small>
      </div>

      <div class="form-group">
        <label for="Select1">Book Condition</label>
        <select class="form-control" id="Book Condition">
          <option selected disabled>Select</option>
          <option>Brand New</option>
          <option>Used--Very Good</option>
          <option>Used--Acceptable</option>
          <option>Used--Poor Condition</option>
          </select>
        </div>

        <div class="form-group">
            <label for="Input3">Price</label>
            <input type="text" id="Price" class="form-control" placeholder="$">
        </div>

        <div class="form-group">
          <label for="Select2">Picture of product</label>
          <input type="file" class="form-control-file" name="productPicture">
        </div>


        <div class="form-group">
          <label for="Select2">Contact Method</label>
          <select class="form-control" multiple id="Contact Method">
            <option>Facebook</option>
            <option>Text</option>
            <option>Wechat</option>
            <option>Telephone</option>
          </select>
        </form>



    <button type="button" class="btn btn-warning"><a href="/sellSubmit">Submit</a>
    </button>

  </form>

<%- include('bootfooter') -%>
