<%- include('bootheader') -%>
<%- include('menubar') -%>
    <div class="jumbotron">
        <h1>Shop</h1>
        <p>Sell and Purchase Second Hand Items</p>
    </div>

    <div class="row">
      <div class="col-md col-sm-2">
        <h1> Books </h1>
        <p> Find new and used books here </p>
        <p>   <form method="post" action="/forum">
            Sell item: <br>

            <div class="form-group">
               <label for="category">Category</label>
               <select class="form-control" id="category">
                 <option>Books</option>
                 <option>Furniture</option>
                 <option>Room Decoration</option>
                 <option>Instruments</option>
                 <option>Other</option>
               </select>
             </div>

            <textarea id="post" name="post"></textarea>
            <br>
            <input type="submit">
          </form>

          <form method="post" action="/forumDelete">
              <ol>
              <% for(i = 0; i<posts.length; i++){  %>
                  <li> <a href="/showPost/<%= posts[i]._id %>">
                        <%= posts[i].userName %></a>
                        <i>
                       <%= posts[i].createdAt %></\/i> <br>
                       <% console.dir([posts[i].userId,user._id]) %>
                       <% if (posts[i].userId.equals(user._id)) { %>
                           <input type="checkbox" name="delete" value="<%= posts[i]._id %>">
                       <% } %>
                       <%= posts[i].category %>
                       <%= posts[i].post %>

                   </li>
              <% } %>
              </ol>
              <input type="submit" value="delete marked">
          </form>
        </p>
      </div>
      <div class="col-md col-sm-2">
        <h1> Furniture </h1>
        <p> New and used furniture available </p>
        <p>   <form method="post" action="/forum">
                Sell item: <br>
                <textarea id="post" name="post"></textarea>
                <br>
                <input type="submit">
              </form>

              <form method="post" action="/forumDelete">
                  <ol>
                  <% for(i = 0; i<posts.length; i++){  %>
                      <li> <a href="/showPost/<%= posts[i]._id %>">
                            <%= posts[i].userName %></a>
                            <i>
                           <%= posts[i].createdAt %></\/i> <br>
                           <% console.dir([posts[i].userId,user._id]) %>
                           <% if (posts[i].userId.equals(user._id)) { %>
                               <input type="checkbox" name="delete" value="<%= posts[i]._id %>">
                           <% } %>
                           <%= posts[i].post %>

                       </li>
                  <% } %>
                  </ol>
                  <input type="submit" value="delete marked">
              </form>
            </p>
          </div>
      </div>
    </div>






<%- include('bootfooter') -%>
